<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TV_ID"
        android:text="1"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:paddingTop="40dp"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/TV_NAME"
        android:text="Thực phẩm A"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/TV_ID"
        android:layout_width="270dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/TV_LHQ"
        android:text="Thu dong"
        android:textSize="18dp"
        android:layout_below="@id/TV_NAME"
        android:layout_toRightOf="@+id/TV_ID"
        android:layout_width="270dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/TV_DVT"
        android:text="4"
        android:textSize="18dp"
        android:layout_below="@id/TV_LHQ"
        android:layout_toRightOf="@+id/TV_ID"
        android:layout_width="270dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/TV_DG"
        android:text="40000"
        android:textSize="18dp"
        android:layout_below="@id/TV_DVT"
        android:layout_toRightOf="@+id/TV_ID"
        android:layout_width="270dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/TV_NXX"
        android:text="VIET NAM"
        android:textSize="18dp"
        android:layout_below="@id/TV_DG"
        android:layout_toRightOf="@+id/TV_ID"
        android:layout_width="270dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>